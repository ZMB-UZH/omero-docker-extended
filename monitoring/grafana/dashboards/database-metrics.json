    {
      "type": "stat",
      "title": "Cache hit ratio",
      "description": "Buffer cache hit ratio for the selected database. Higher is better (>99% is typically healthy).",
      "id": 4,
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 8,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "orange",
                "value": 0.9
              },
              {
                "color": "green",
                "value": 0.99
              }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(pg_stat_database_blks_hit{datname=\"omero\"}) / (sum(pg_stat_database_blks_hit{datname=\"omero\"}) + sum(pg_stat_database_blks_read{datname=\"omero\"}))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Transaction rate",
      "description": "Combined commit + rollback rate for the selected database.",
