        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(pg_stat_database_xact_commit{datname=\"omero\"}[5m])) + sum(rate(pg_stat_database_xact_rollback{datname=\"omero\"}[5m]))"
        }
